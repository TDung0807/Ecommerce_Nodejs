<div id="content" class="main-content">
    <div class="layout-px-spacing">

        <div class="middle-content container-xxl p-0">
            <div class="row" id="cancel-row">

                <div class="col-xl-12 col-lg-12 col-sm-12 layout-top-spacing layout-spacing">
                    <div class="widget-content widget-content-area br-8 p-2">
                        <table id="invoice-list" class="table dt-table-hover mt-2" style="width:100%">
                            <thead>
                                <tr>
                                    <th>Invoice ID</th>
                                    <th>Total</th>
                                    <th>Purchase Date</th>
                                    <th>Invoice Detail</th>
                                </tr>
                            </thead>
        
                            <tbody>
                                {{#each invoices}}
                                <tr>
                                    <td>
                                        <div class="d-flex">
                                            <p class="align-self-center mb-0 user-name">{{this._id}}</p>
                                        </div>
                                    </td>
                                    <td>
                                        <div class="d-flex">
                                            <p class="align-self-center mb-0 user-name">{{this.totalAmount}} </p>
                                        </div>
                                    </td>
                                    <td>
                                        <div class="d-flex">
                                            <p class="align-self-center mb-0 user-name">{{this.purchaseDate}} </p>
                                        </div>
                                    </td>
                                    
                                    <td>
                                        {{#if_eq ../page "staff_layout"}}
                                            <a class="badge badge-light-primary text-start me-2 action-edit" href="/staff/invoice/{{this._id}}">
                                                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" class="bi bi-clipboard2-fill" viewBox="0 0 16 16">
                                                    <path d="M9.5 0a.5.5 0 0 1 .5.5.5.5 0 0 0 .5.5.5.5 0 0 1 .5.5V2a.5.5 0 0 1-.5.5h-5A.5.5 0 0 1 5 2v-.5a.5.5 0 0 1 .5-.5.5.5 0 0 0 .5-.5.5.5 0 0 1 .5-.5z"/>
                                                    <path d="M3.5 1h.585A1.498 1.498 0 0 0 4 1.5V2a1.5 1.5 0 0 0 1.5 1.5h5A1.5 1.5 0 0 0 12 2v-.5c0-.175-.03-.344-.085-.5h.585A1.5 1.5 0 0 1 14 2.5v12a1.5 1.5 0 0 1-1.5 1.5h-9A1.5 1.5 0 0 1 2 14.5v-12A1.5 1.5 0 0 1 3.5 1"/>
                                                </svg>
                                            </a>
                                        {{/if_eq}}

                                        {{#if_eq ../page "admin_layout"}}
                                            <a class="badge badge-light-primary text-start me-2 action-edit" href="/admin/invoice/{{this._id}}">
                                                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" class="bi bi-clipboard2-fill" viewBox="0 0 16 16">
                                                    <path d="M9.5 0a.5.5 0 0 1 .5.5.5.5 0 0 0 .5.5.5.5 0 0 1 .5.5V2a.5.5 0 0 1-.5.5h-5A.5.5 0 0 1 5 2v-.5a.5.5 0 0 1 .5-.5.5.5 0 0 0 .5-.5.5.5 0 0 1 .5-.5z"/>
                                                    <path d="M3.5 1h.585A1.498 1.498 0 0 0 4 1.5V2a1.5 1.5 0 0 0 1.5 1.5h5A1.5 1.5 0 0 0 12 2v-.5c0-.175-.03-.344-.085-.5h.585A1.5 1.5 0 0 1 14 2.5v12a1.5 1.5 0 0 1-1.5 1.5h-9A1.5 1.5 0 0 1 2 14.5v-12A1.5 1.5 0 0 1 3.5 1"/>
                                                </svg>
                                            </a>
                                        {{/if_eq}}


                                        
                                    </td>
                                </tr>
                                {{/each}}
                            </tbody>
                        </table>

                        <div class="paginating-container pagination-default mt-5 mb-5">
                            <ul class="pagination">
                                {{#if prevPage}}
                                <li class="prev"><a href="?page={{prevPage}}">Prev</a></li>
                                {{/if}}
                                {{#each pages}}
                                <li class="{{#if isActive}}active{{/if}}"><a
                                        href="?page={{this.number}}">{{this.number}}</a></li>
                                {{/each}}
                                {{#if nextPage}}
                                <li class="next"><a href="?page={{nextPage}}">Next</a></li>
                                {{/if}}
                            </ul>
                        </div>


                    </div>
                </div>

            </div>

        </div>

    </div>
</div>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
