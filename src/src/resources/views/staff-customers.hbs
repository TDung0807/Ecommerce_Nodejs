<div id="content" class="main-content">
    <div class="layout-px-spacing">

        <div class="middle-content container-xxl p-0">
            <div class="row" id="cancel-row">

                <div class="col-xl-12 col-lg-12 col-sm-12 layout-top-spacing layout-spacing">
                    <div class="widget-content widget-content-area br-8 p-2">
                        <table id="invoice-list" class="table dt-table-hover" style="width:100%">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Phone number</th>
                                    <th>Address</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                 {{#each customers}}
                                <tr>
                                    <td>
                                        <div class="d-flex">
                                            <p class="align-self-center mb-0 user-name">{{this.fullname}} </p>
                                        </div>
                                    </td>
                                    <td>
                                        <div class="d-flex">
                                            <p class="align-self-center mb-0 user-name">{{this.phonenumber}} </p>
                                        </div>
                                    </td>
                                    <td>
                                        <div class="d-flex">
                                            <p class="align-self-center mb-0 user-name">{{this.address}} </p>
                                        </div>
                                    </td>
                                    
                                    <td>
                                        <a class="badge badge-light-primary text-start me-2 action-edit"
                                            href="./customers/{{this._id}}"><svg xmlns="http://www.w3.org/2000/svg"
                                                width="24" height="24" viewBox="0 0 24 24" fill="none"
                                                stroke="currentColor" stroke-width="2" stroke-linecap="round"
                                                stroke-linejoin="round" class="feather feather-edit-3">
                                                <path d="M12 20h9"></path>
                                                <path d="M16.5 3.5a2.121 2.121 0 0 1 3 3L7 19l-4 1 1-4L16.5 3.5z">
                                                </path>
                                            </svg></a>
                                    </td>
                                </tr>
                                {{/each}}
                            </tbody>
                        </table>

                        <div class="paginating-container pagination-default mt-5 mb-5">
                            <ul class="pagination">
                                {{#if prevPage}}
                                <li class="prev"><a href="?page={{prevPage}}">Prev</a></li>
                                {{/if}}
                                {{#each pages}}
                                <li class="{{#if isActive}}active{{/if}}"><a
                                        href="?page={{this.number}}">{{this.number}}</a></li>
                                {{/each}}
                                {{#if nextPage}}
                                <li class="next"><a href="?page={{nextPage}}">Next</a></li>
                                {{/if}}
                            </ul>
                        </div>
                    </div>
                </div>

            </div>

        </div>

    </div>
</div>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
